<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:id="@+id/seletedFoodText"
            android:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodTxt" app:layout_constraintHorizontal_bias="0.489"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seletedFoodText" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.641"/>
    <Button
            android:text="Decide"
            android:layout_width="0dp"
            android:id="@+id/decideBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/muli_bold" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:inputType="none|textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:fontFamily="@font/muli_bold"
            android:hint="Add new food" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"/>
    <Button
            android:text="Add Food"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodBtn" android:fontFamily="@font/muli_bold"
            android:textSize="14sp" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="124dp" app:layout_constraintBottom_toTopOf="@+id/decideBtn"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.514"/>

</android.support.constraint.ConstraintLayout>